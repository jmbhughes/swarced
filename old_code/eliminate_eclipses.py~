def find_phase(time, period):
	return (time % period) / period	

def clip_eclipses(phase, period, p_phase, s_phase, p_width, s_width):
	p_low_range = p_phase - p_width / 2
	p_high_range = p_phase + p_width / 2
	s_low_range = s_phase - s_width / 2
	s_high_range = s_phase + s_width / 2
	print(p_low_range, p_high_range, s_low_range, s_high_range)
	mask_all = ((phase < p_low_range) | (phase > p_high_range)) * ((phase < s_low_range) | (phase > s_high_range))
	return mask_all
